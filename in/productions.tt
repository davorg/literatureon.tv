[% # Provide a title -%]
[% META title = 'List of Productions' -%]

<h1 class="display-3">[% template.title or 'Literature on TV' %]</h1>

<ul>
[% FOREACH p IN productions.all.sort('year', 'title')-%]
<li><a href="/productions/[% p.slug %]/">[% p.title %]</a>
      ([% p.description %])</li>
[% END -%]
</ul>
